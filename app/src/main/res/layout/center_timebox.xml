<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/rlClockCenter"
    android:layout_width="@dimen/timerClockCenterSize"
    android:layout_height="@dimen/timerClockCenterSize"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/clock_background"
    android:padding="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/vClockBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clock_background" />

    <TextView
        android:id="@+id/tvClockLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        android:textColor="@color/text_color_secondary_dark"
        android:textSize="12sp"
        tools:text="Part #5" />

    <LinearLayout
        android:id="@+id/llTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClockTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/timerClockFontSize"
            android:textStyle="bold"
            tools:text="24" />

        <TextView
            android:id="@+id/tvClockTimeMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/timerClockFontSize" />

        <TextView
            android:id="@+id/tvClockTimeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/timerClockFontSize"
            android:textStyle="bold"
            tools:text="59" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivClockPauseImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="actionImage"
        android:src="@drawable/ic_pause_white_24dp" />
</RelativeLayout>
