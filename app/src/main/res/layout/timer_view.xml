<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="pl.brokenpipe.timeboxing.screens.timer.TimerViewModel"/>
        <import type="pl.brokenpipe.timeboxing.BuildConfig"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <pl.brokenpipe.timeboxing.ui.clock.ClockFace
            tools:visibility="gone"
            android:id="@+id/clockFace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />
        <View
            android:id="@+id/vClockCenterBackground"
            android:background="@color/clock_background"
            android:layout_width="@dimen/timerClockCenterSize"
            android:layout_height="@dimen/timerClockCenterSize"
            app:layout_constraintRight_toRightOf="@+id/rlClockCenter"
            app:layout_constraintLeft_toLeftOf="@+id/rlClockCenter"
            app:layout_constraintBottom_toBottomOf="@+id/rlClockCenter"
            app:layout_constraintTop_toTopOf="@+id/rlClockCenter" />
        <RelativeLayout
            android:id="@+id/rlClockCenter"
            android:layout_width="@dimen/timerClockCenterSize"
            android:layout_height="@dimen/timerClockCenterSize"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/clock_background"
            android:onClick="@{() -> viewModel.onStartPauseClick()}"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tvClockLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="@color/text_color_secondary_dark"
                android:textSize="12sp"
                tools:text="Part #5" />
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:visibility="@{viewModel.timerLeftValueVisibility}"
                    android:id="@+id/tvClockTimeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="24"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="@dimen/timerClockFontSize"
                    android:text="@{viewModel.timeLeftValue}"/>
                <TextView
                    android:visibility="@{viewModel.timerLeftValueVisibility}"
                    android:id="@+id/tvClockTimeMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="@dimen/timerClockFontSize"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tvClockTimeRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="@dimen/timerClockFontSize"
                    android:textStyle="bold"
                    tools:text="59"
                    android:text="@{viewModel.timeRightValue}"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivClockActionImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_pause_white_24dp"
                android:visibility="@{viewModel.pauseButtonVisibility}"
                android:contentDescription="actionImage" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="@{BuildConfig.VERSION_NAME}"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="1.0.1" />

        <include layout="@layout/main_onboarding"
            android:visibility="@{viewModel.showOnboarding}"/>
    </android.support.constraint.ConstraintLayout>
</layout>